extends layout.pug

block styles
    //- Custom styles
    link(rel="stylesheet", href="/css/lib/financers.css")

block content
    //- Page content
    //- Banner
    section#banner
        //-
            ".inner" is set up as an inline-block so it automatically expands
            in both directions to fit whatever's inside it. This means it won't
            automatically wrap lines, so be sure to use line breaks where
            appropriate (<br />).
        header.container
                //h2#banner-header
                //- p#banner-p
                img(src="/images/logo.png")(style='margin-left:100px;')(data-tilt="")
                p
                |   By building the world's first automated,
                br
                |   software platform that underwrites and funds
                br
                |   cross border trade for fast growing Asian exporters,
                br
                |   Drip provides investors access to short term trade finance receivables.
    //- Main
    article#main
        header.special.container
            span.icon.fa-bar-chart-o
            h2  Investments
        //- One
        section.wrapper.style2.container.special-alt(style='margin-top:0px;')
            .row.gtr-50
                .col-8.col-12-narrower
                    article#main
                      header
                        h2(style='margin-left:230px;') Create Investment
                      // One
                      section.wrapper.style4.special.container.medium#form
                        // Content
                        .content
                          form(style='color:black')
                            .row.gtr-50
                              .col-12#input
                                input(type="text" name="name" placeholder="Full Name")
                              .col-12#input
                                input(type="text" name="email" placeholder="Email")
                              .col-12#input
                                input(type="text" name="subject" placeholder="Organization")
                              .col-12#input
                                input(type="text" placeholder="Phone" name="phone")
                    footer
                        ul.buttons(style='margin-left:230px;margin-top:0px;')
                            li
                                a.button(href="#") Submit
                            br
                            br
                            br
                .col-4.col-12-narrower.imp-narrower
                    ul.featured-icons
                        li(data-aos="zoom-in")
                            span.icon.fa-clock-o
                                span.label Feature 1
                        li(data-aos="zoom-in")
                            span.icon.fa-volume-up
                                span.label Feature 2
                        li(data-aos="zoom-in")
                            span.icon.fa-laptop
                                span.label Feature 3
                        li(data-aos="zoom-in")
                            span.icon.fa-inbox
                                span.label Feature 4
                        li(data-aos="zoom-in")
                            span.icon.fa-lock
                                span.label Feature 5
                        li(data-aos="zoom-in")
                            span.icon.fa-cog
                                span.label Feature 6
                        li(data-aos="zoom-in")
                            span.icon.fa-money
                                span.label Feature 1
                        li(data-aos="zoom-in")
                            span.icon.fa-cart-plus
                                span.label Feature 2
                        li(data-aos="zoom-in")
                            span.icon.fa-laptop
                                span.label Feature 3
                        li(data-aos="zoom-in")
                            span.icon.fa-inbox
                                span.label Feature 4
                        li(data-aos="zoom-in")
                            span.icon.fa-lock
                                span.label Feature 5
                        li(data-aos="zoom-in")
                            span.icon.fa-cog
                                span.label Feature 6

        //- Two
        section.wrapper.style1.container.special
            h2(style='color:black') Earn high yield with a low risk asset class
                br
                br
            .row
                .col-4.col-12-narrower(data-aos="zoom-in-right")
                    section
                        span.icon.featured.fa.fa-area-chart(style="color:black;")
                        header
                            h3(style="color:black;") Get Fast!
                        p
                            | High Yield.
                            br
                            | Low Risk.
                            br
                            | Short Duration.
                .col-4.col-12-narrower(data-aos="zoom-in")
                    section
                        span.icon.featured.fa.fa-ravelry(style="color:black;")
                        header
                            h3(style="color:black;") Get Big!
                        p
                            | Diversification.
                            br
                            | Global Contacts.
                            br
                            | Corporate receivables.
                .col-4.col-12-narrower(data-aos="zoom-in-left")
                    section
                        span.icon.featured.fa-check(style="color:black;")
                        header
                            h3(style="color:black;") Get Verified!
                        p
                            | Global Exposure.
                            br
                            | Invest in Verified
                            br
                            | jdfdfdshfskfs
    //- Three

    //- CTA
    section#cta
        header
            h2
                | Ready to do
                strong   INVESTment
                | ?
            //p Proin a ullamcorper elit, et sagittis turpis integer ut fermentum.
        footer
            ul.buttons
                li
                    a.button.primary(href="#") Let's Invest
                li
                    a.button(href="#") Get More


block scripts
    //- custom scripts
    script(src="/js/lib/typeit.min.js")
    script(src="/js/init/typeit.homepage.js")
    script(src="/js/lib/tilt.jquery.min.js")
