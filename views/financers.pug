extends layout.pug

block styles
    //- Custom styles
    //-link(rel="stylesheet", href="/css/lib/financers.css")

block content
    //- Page content
    //- Banner
    section#banner.finance
        //-
            ".inner" is set up as an inline-block so it automatically expands
            in both directions to fit whatever's inside it. This means it won't
            automatically wrap lines, so be sure to use line breaks where
            appropriate (<br />).
        .inner
            header
                img(src="/images/logo-small.png", alt="logo", style="max-height: 80px;", data-tilt)  
                br
                br
                h2#banner-header(style="font-size:1.2em;")
                //-p#banner-p
                


    //- Main
    article#main
        header.special.container
            span.icon.fa-dollar
            h1(style="font-size: 3em;")  Investments
        //- One
        


        section.wrapper.style1.container.special
            h2(style="font-size: 2em;") Earn high yield with a low risk asset class
                br
                br
            //-.row
                .col-4.col-12-narrower(data-aos="zoom-in-right")
                    section
                        span.icon.featured.fa.fa-area-chart(style="color:black;")
                        header
                            h3(style="color:black;") Get Fast!
                        p
                            | High Yield.
                            br
                            | Low Risk.
                            br
                            | Short Duration.
                .col-4.col-12-narrower(data-aos="zoom-in")
                    section
                        span.icon.featured.fa.fa-ravelry(style="color:black;")
                        header
                            h3(style="color:black;") Get Big!
                        p
                            | Diversification.
                            br
                            | Global Contacts.
                            br
                            | Corporate receivables.
                .col-4.col-12-narrower(data-aos="zoom-in-left")
                    section
                        span.icon.featured.fa-check(style="color:black;")
                        header
                            h3(style="color:black;") Get Verified!
                        p
                            | Global Exposure.
                            br
                            | Invest in Verified

            .row
                .col-6.col-12-narrower
                    section.container
                        .row
                            .col-2
                                span.icon.featured.fa.fa-area-chart(style="color:black;")

                            .col-10
                                h3(style="color:black;") Get Fast!
                                p High Yield. Low Risk. Short Duration.

                        .row
                            .col-2
                                span.icon.featured.fa.fa-ravelry(style="color:black;")

                            .col-10
                                h3(style="color:black;") Get Big!
                                p Diversification. Global Contacts. Corporate receivables.
                        
                        .row
                            .col-2
                                span.icon.featured.fa.fa-check(style="color:black;")

                            .col-10
                                h3(style="color:black;") Get Verified!
                                p Global Exposure. Invest in Verified


                .col-6.col-12-narrower.padded-comfortable
                    canvas#myChart(width="400px", height="250px")

                    p TRADE FINANCE RECEIVABLES




        section.wrapper.style2.container.special-alt

            header
                h3(style="font-size: 2em;") Create Investment
            .row.gtr-50
                .col-7.col-12-narrower


                    // One
                    section.wrapper.style4.special.container.medium#form

                        form#investform(style='color:black' action="#")
                            .row.gtr-50
                                .col-12#input
                                    input(type="text" name="name" placeholder="Full Name")
                                .col-12#input
                                    input(type="text" name="email" placeholder="Email")
                                .col-12#input
                                    input(type="text" name="subject" placeholder="Organization")
                                .col-12#input
                                    input(type="text" placeholder="Phone" name="phone")
                    footer
                        ul.buttons
                            li
                                a.button(href="javascript:document.getElementById('investform').submit();") Submit


                .col-5.col-12-narrower.imp-narrower
                    ul.featured-icons
                        li(data-aos="zoom-in")
                            span.icon.fa-clock-o
                                span.label Feature 1
                        li(data-aos="zoom-in")
                            span.icon.fa-volume-up
                                span.label Feature 2
                        li(data-aos="zoom-in")
                            span.icon.fa-laptop
                                span.label Feature 3
                        li(data-aos="zoom-in")
                            span.icon.fa-inbox
                                span.label Feature 4
                        li(data-aos="zoom-in")
                            span.icon.fa-lock
                                span.label Feature 5
                        li(data-aos="zoom-in")
                            span.icon.fa-cog
                                span.label Feature 6


        //- Two

    //- Three

    //- CTA
    section#cta-finance
        header
            h2
                | Ready to 
                strong   INVEST
                | ?
            //p Proin a ullamcorper elit, et sagittis turpis integer ut fermentum.
        footer
            ul.buttons
                li
                    a.button.primary(href="#") Let's Invest
                li
                    a.button(href="#") Get More


block scripts
    //- custom scripts
    script(src="/js/lib/typeit.min.js")
    script(src="/js/init/typeit.financers.js")
    script(src="/js/lib/tilt.jquery.min.js")
    script(src="/js/lib/Chart.bundle.min.js")
    script(src="/js/init/chart.financers.js")
